<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Calorie Tracker</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-success">
            <a class="navbar-brand" style="color:black" href="/">Calorie Tracker</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" style="color:black" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color:black" href="/Calorie/CalorieTracker">Calorie Tracker</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color:black" href="/Calorie/Recipe">Recipe</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color:black" href="/Calorie/Chart">Calorie Chart</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color:black" href="/Home/About">About Us</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="container-fluid">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-auto">
        <p class="mb-0">© 2024 Calorie Tracker. All rights reserved.</p>
        <p class="mb-0"><small>Designed with Bootstrap</small></p>
    </footer>

    <!-- Bootstrap JavaScript -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
