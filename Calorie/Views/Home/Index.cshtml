@{
    ViewData["Title"] = "Home";
}

<div class="container-fluid p-0 mt-4">
    <!-- Hero Section -->
    <div class="jumbotron text-center bg-white shadow-sm p-4 mx-0">
        <h2 class="text-success">Your Health, Our Priority</h2>
        <p class="lead">Our Calorie Tracker helps you monitor your daily calorie intake with ease. Start tracking today and take the first step towards a healthier you!</p>
        <img src="~/images/calorie.png" alt="Calorie Tracker Illustration" class="img-fluid rounded mt-3" style="max-width: 100%; height: auto;">
    </div>

    <!-- Benefits Section -->
    <section id="benefits-section" class="text-center my-5">
        <h2 class="text-success mb-4">Why Use Our Calorie Tracker?</h2>
        <div class="row justify-content-center">
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card border-0">
                    <img src="~/images/healthease.jpg" alt="Easy to Use Icon" class="card-img-top benefit-image mx-auto">
                    <div class="card-body">
                        <h3 class="card-title text-success">Easy to Use</h3>
                        <p class="card-text">Our interface is designed to be simple and user-friendly.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card border-0">
                    <img src="~/images/healthgoal.jpg" alt="Personalized Goals Icon" class="card-img-top benefit-image mx-auto">
                    <div class="card-body">
                        <h3 class="card-title text-success">Set Personalized Goals</h3>
                        <p class="card-text">Track your progress towards your health goals.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card border-0">
                    <img src="~/images/healthinsights.jpg" alt="Insights Icon" class="card-img-top benefit-image mx-auto">
                    <div class="card-body">
                        <h3 class="card-title text-success">Gain Insights</h3>
                        <p class="card-text">Understand your eating patterns and make informed choices.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Tips Section -->
    <section id="tips-section" class="my-5 text-center">
        <h2 class="text-success mb-4">Healthy Eating Tips</h2>
        <ul class="list-group list-group-flush mx-auto" style="max-width: 600px;">
            <li class="list-group-item">Focus on whole foods.</li>
            <li class="list-group-item">Stay hydrated.</li>
            <li class="list-group-item">Avoid processed foods.</li>
            <li class="list-group-item">Eat balanced meals.</li>
            <li class="list-group-item">Practice mindful eating.</li>
        </ul>
    </section>
</div>
