@{
    Layout = "_Layout";  // Reference your main layout file
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>About Team</title>

    <!-- Add Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome CDN for LinkedIn icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <style>
        /* Custom styles */
        .imgBlock {
            background-color: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .imgBlock:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
        }

        .imgBlock img {
            width: 200px; /* Fixed size for images */
            height: 200px; /* Fixed size for images */
            object-fit: cover; /* Crop images to fit */
            border-radius: 50%;
            border: 5px solid #fff; /* Border for the circular images */
        }

        .team-member-info {
            margin-top: 15px;
            color: #495057;
        }

        .linkedin-icon {
            display: inline-block;
            margin-top: 10px;
            font-size: 1.2rem;
            color: #0077b5;
            text-decoration: none;
        }

        .linkedin-icon:hover {
            color: #005582;
        }

        h1 {
            font-size: 2.5rem;
            color: #343a40;
        }

        .outer-container {
            text-align: center;
            margin-top: 30px;
        }

        .team-title {
            font-weight: bold;
            color: #007bff;
        }

        .row {
            display: flex;
            justify-content: space-around;
        }

        .col-md-3 {
            margin-bottom: 30px;
        }
        
        .imgBlock img{
            height:250px;
            width:250px;
        }
        
        .erd-image {
            max-width: 100%;
            height: auto;
            margin-top: 40px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>
<body>
    <div id="mainContainer" class="container my-5">
        <div id="header"></div> <!-- Placeholder for dynamic header -->

        <div class="outer-container">
            <h1>About Our Team</h1>

            <div class="row mt-4">
                <!-- Team Member 1 -->
                <div class="col-md-3">
                    <div class="imgBlock">
                        <img src="/images/Nikil.jpeg" alt="Nikil Valusa" class="img-fluid" />
                        <h2 class="team-title">Nikil Valusa</h2>
                        <p class="team-member-info">Java Full Stack Developer with a passion for building scalable web applications and working on the latest technologies.</p>
                        <a href="https://www.linkedin.com/in/nikil-valusa/" class="linkedin-icon" target="_blank">
                            <i class="fab fa-linkedin"></i> LinkedIn
                        </a>
                    </div>
                </div>

                <!-- Team Member 2 -->
                <div class="col-md-3">
                    <div class="imgBlock">
                        <img src="/images/Deekshith.jpg" alt="Deekshith Reddy" class="img-fluid" />
                        <h2 class="team-title">Deekshith Reddy</h2>
                        <p class="team-member-info">Experienced Data Engineer specializing in data pipelines, ETL processes, and big data technologies like Hadoop and Spark.</p>
                        <a href="https://www.linkedin.com/in/deekshith-reddy-thummeti-b2059b245/" class="linkedin-icon" target="_blank">
                            <i class="fab fa-linkedin"></i> LinkedIn
                        </a>
                    </div>
                </div>

                <!-- Team Member 3 -->
                <div class="col-md-3">
                    <div class="imgBlock">
                        <img src="/images/Ravi.jpg" alt="Ravidranath Katta" class="img-fluid" />
                        <h2 class="team-title">Ravindranath Katta</h2>
                        <p class="team-member-info">Java Developer with strong expertise in backend development, performance optimization, and microservices architecture.</p>
                        <a href="https://www.linkedin.com/in/ravindranath-katta-2892221a9/" class="linkedin-icon" target="_blank">
                            <i class="fab fa-linkedin"></i> LinkedIn
                        </a>
                    </div>
                </div>

                <!-- Team Member 4 -->
                <div class="col-md-3">
                    <div class="imgBlock">
                        <img src="/images/Manoj Katakam.jpg" alt="Manoj Katakam" class="img-fluid" />
                        <h2 class="team-title">Manoj Katakam</h2>
                        <p class="team-member-info">Cobol Developer with a deep understanding of legacy systems and expertise in enterprise-level applications.</p>
                        <a href="https://www.linkedin.com/in/manoj-kumar-k-729a16137/" class="linkedin-icon" target="_blank">
                            <i class="fab fa-linkedin"></i> LinkedIn
                        </a>
                    </div>
                </div>
            </div>

            <!-- ERD Section -->
            <h2 class="mt-5">Calorie Tracker ERD</h2>
            <p class="lead">This is the entity-relationship diagram for our calorie tracker, showing the relationships between User, Recipe, and CalorieTracker tables.</p>
            <img src="/images/erd-image.png" alt="Calorie Tracker ERD" class="erd-image" />
        </div>
    </div>

    <footer class="text-center mt-5">
        <p>© 2024 Your Company | All Rights Reserved</p>
    </footer>

    <script>
        // Fetching and loading the header dynamically if required
        fetch("/header.html")
            .then((response) => response.text())
            .then((data) => {
                document.getElementById("header").innerHTML = data;
            });
    </script>

    <!-- Include Bootstrap JS (Optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
